<!DOCTYPE html>
<html lang="en">
	<head>
		<%- include('partials/head') %>
		<title>
			<%=medInfo.dog%>'s <%=medInfo.medication%> Schedule - pawesome reminders
		</title>
	</head>
	<body>
		<%- include('partials/navbar') %>

		<main class="container">
			<h1><%=medInfo.dog%>'s <%=medInfo.medication%> Schedule</h1>
			<div class="keyInfo rounded bg-danger border rounded text-light mt-3">
				<h4 class="d-block px-3 pt-2">Key Info</h4>
				<div class="list-group list-group-flush">
					<div class="list-group-item py-3">
						<h6>Medication</h6>
						<%=medInfo.medication%>
						<h6 class="mt-3">Description</h6>
						<%=medInfo.description%>
						<div class="list-group list-group-horizontal my-3">
							<div class="list-group-item">
								<h6>Doses</h6>
								<%=medInfo.number_of_doses%>
							</div>
							<div class="list-group-item">
								<h6>Frequency</h6>
								<%=medInfo.freq_string%>
							</div>
							<div class="list-group-item">
								<h6>Start Date</h6>
								<%=medInfo.start_date.toLocaleDateString('en-GB', {
								weekday:"short", day:"numeric", month: "short", year:"numeric"}
								)%>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="schedInfo rounded bg-success border rounded mt-3">
				<h4 class="d-block text-light px-3 pt-2">Schedule</h4>
				<div class="list-group list-group-flush">
					<% schedInfo.forEach(dose => { %>
					<div class="list-group-item py-3"><%= dose %></div>
					<% }) %>
				</div>
			</div>
			<div class="notesInfo rounded bg-warning border rounded mt-3">
				<h4 class="d-block px-3 pt-2">Notes</h4>
				<div class="p-3 bg-light">
					<%=medInfo.notes ? medInfo.notes : "None" %>
				</div>
			</div>
			<!-- <a href="" class="btn btn-primary my-3">Edit this schedule</a> -->
			<a href="/dog/<%=medInfo.dog_id%>" class="btn btn-primary my-3"
				>Back to <%=medInfo.dog%>'s page</a
			>
		</main>
		<script
			src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
			crossorigin="anonymous"
		></script>
	</body>
</html>
